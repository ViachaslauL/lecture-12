<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="basicDataSource"
          class="org.apache.commons.dbcp2.BasicDataSource"
          destroy-method="close"
          p:url="jdbc:mysql://localhost:3306/school_diary"
          p:username="admin"
          p:password="adminPass"
          p:initialSize="5"
          p:maxTotal="20"/>

    <bean class="by.itacademy.javaenterprise.lepnikau.app.connection.DSCreator"
          id="dsCreator">
        <property name="basicDataSource" ref="basicDataSource"/>
    </bean>

    <bean id="studentDAO"
          class="by.itacademy.javaenterprise.lepnikau.app.dao.implement.StudentDAOImpl"/>
    <bean id="parentDAO"
          class="by.itacademy.javaenterprise.lepnikau.app.dao.implement.ParentDAOImpl"/>
    <bean id="markDAO"
          class="by.itacademy.javaenterprise.lepnikau.app.dao.implement.MarkDAOImpl"/>



</beans>